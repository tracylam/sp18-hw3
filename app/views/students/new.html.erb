<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name) %>

  <%= label_tag(:major, "Major") %>
  <%= text_field_tag(:major) %>

  <%= label_tag(:school, "School") %>
  <%= text_field_tag(:school) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>
<% end %>
